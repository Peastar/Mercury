{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "noImplicitThis": false
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
