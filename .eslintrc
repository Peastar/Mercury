{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersions": 10,
    "sourcetype": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "import",
    "node",
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/warnings",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier",
    "@react-native-community"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "react/jsx-indent": 0,
    "react/display-name": 0,
    "no-console": 0,
    "no-unused-vars": 0,
    "no-useless-catch": "off"
  }
}
